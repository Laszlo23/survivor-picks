# ═══════════════════════════════════════════════════════════════════════
# RealityPicks — Production Environment Variables
# Copy this to .env and fill in all values before deploying.
# ═══════════════════════════════════════════════════════════════════════

# ─── Database (Required) ──────────────────────────────────────────────
# PostgreSQL connection string for your production database
DATABASE_URL="postgresql://user:password@host:5432/realitypicks?schema=public"

# ─── NextAuth (Required) ─────────────────────────────────────────────
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="GENERATE_A_STRONG_SECRET_HERE"
# Your production domain (no trailing slash)
NEXTAUTH_URL="https://realitypicks.xyz"

# ─── Email Provider (Required for magic link auth) ────────────────────
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@realitypicks.xyz"

# ─── Admin ───────────────────────────────────────────────────────────
ADMIN_EMAIL="admin@realitypicks.xyz"

# ─── Web3 / Base Chain (Required) ────────────────────────────────────
NEXT_PUBLIC_CHAIN="mainnet"
# Use a reliable RPC endpoint (Alchemy, QuickNode, or default Base)
NEXT_PUBLIC_BASE_RPC="https://mainnet.base.org"
# WalletConnect project ID — get from https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="300be2c86da60b01999e6aa7c74d5542"

# ─── Contract Addresses (Base Mainnet) ───────────────────────────────
NEXT_PUBLIC_PICKS_TOKEN_ADDRESS="0x5294199EB963B6b868609B324D540B79BFbafB07"
NEXT_PUBLIC_TREASURY_ADDRESS="0x5bA7Bc0Bfe44DB1AE8D81c09b7FB356f656EAC7d"
NEXT_PUBLIC_PREDICTION_ENGINE_ADDRESS="0x3599A6B2dCEde53606EBb126f563D5708399d451"
NEXT_PUBLIC_STAKING_VAULT_ADDRESS="0x25Bd8674F137f8B5f14808A9034D1d8644A39612"
NEXT_PUBLIC_BADGE_NFT_ADDRESS="0x0EEee99420686733063E4fE83E504c8929e16626"
NEXT_PUBLIC_SEASON_PASS_ADDRESS="0x938B88628Cfcffe230D58a1EC1CC81D04d8eF965"

# ─── RealityPicks NFT Collection ─────────────────────────────────────
NEXT_PUBLIC_REALITYPICKS_NFT_ADDRESS="0x88d614173Af60f9295422110bd925fA9e15F32B3"
# Private key for signing NFT eligibility (KEEP SECRET — never commit)
NFT_SIGNER_PRIVATE_KEY="0xYOUR_SIGNER_PRIVATE_KEY_HERE"

# ─── Clanker Token Info ──────────────────────────────────────────────
NEXT_PUBLIC_CLANKER_TOKEN_URL="https://www.clanker.world/clanker/0x5294199EB963B6b868609B324D540B79BFbafB07"

# ─── App URL ─────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL="https://realitypicks.xyz"

# ─── Event Indexer ───────────────────────────────────────────────────
# Random string for API key authentication on indexer endpoint
INDEXER_API_KEY="GENERATE_A_RANDOM_KEY_HERE"

# ─── Base RPC (Required for server-side contract reads) ──────────────
# Used by NFT eligibility checks and event indexer on the server side
BASE_MAINNET_RPC="https://mainnet.base.org"

# ─── Cron / Agent Auth ──────────────────────────────────────────────
# Secret used by Vercel Cron to authenticate agent and indexer endpoints
CRON_SECRET="GENERATE_A_RANDOM_KEY_HERE"

# ─── Dev Login Guard ─────────────────────────────────────────────────
# Set to "true" in production to double-block the dev-login endpoint
DISABLE_DEV_LOGIN="true"

# ─── Farcaster Mini App ───────────────────────────────────────────────
# Sign your manifest at: https://farcaster.xyz/~/developers/mini-apps/manifest?domain=realitypicks.xyz
# After signing, paste the header, payload, and signature here:
FARCASTER_MANIFEST_HEADER=""
FARCASTER_MANIFEST_PAYLOAD=""
FARCASTER_MANIFEST_SIGNATURE=""
NEXT_PUBLIC_FARCASTER_ENABLED="true"

# ─── AI Agent (Optional) ─────────────────────────────────────────────
# Only needed if using the AI prediction agent
# OPENAI_API_KEY=""
# TAVILY_API_KEY=""
# AGENT_SECRET_KEY=""
