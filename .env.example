# ─── Database (Supabase Postgres) ──────────────────────────────────────
# Get from: Supabase Dashboard → Connect → URI
# Transaction pooler (port 6543) for serverless/Next.js
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres"
# Direct connection for Prisma migrations (port 5432)
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres"

# ─── Supabase Auth ───────────────────────────────────────────────────
# Get from Dashboard → Settings → API (or Connect dialog)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY="sb_publishable_xxx"
# Service role key (server-only, for admin/bypass RLS) — never expose to client
SUPABASE_SERVICE_ROLE_KEY="sb_secret_xxx"

# ─── Admin ───────────────────────────────────────────────────────────
ADMIN_EMAIL="admin@realitypicks.xyz"

# ─── Web3 / Base Chain ──────────────────────────────────────────────
# Chain: "local" (hardhat), "testnet" (Base Sepolia), "mainnet" (Base)
NEXT_PUBLIC_CHAIN="local"

# RPC endpoints (use Alchemy/QuickNode for reliability in production)
NEXT_PUBLIC_BASE_RPC="https://mainnet.base.org"
NEXT_PUBLIC_BASE_SEPOLIA_RPC="https://sepolia.base.org"

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
# Required for wallet connection in production
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=""

# ─── Contract Addresses (set after deployment) ──────────────────────
# Deploy via Clanker: cd contracts && npm run deploy:clanker:token
# Then utility contracts: PICKS_TOKEN_ADDRESS=0x... npm run deploy:clanker:mainnet
# Then copy addresses from contracts/deployments/<network>-clanker.env
NEXT_PUBLIC_PICKS_TOKEN_ADDRESS=""
NEXT_PUBLIC_TREASURY_ADDRESS=""
NEXT_PUBLIC_PREDICTION_ENGINE_ADDRESS=""
NEXT_PUBLIC_STAKING_VAULT_ADDRESS=""
NEXT_PUBLIC_BADGE_NFT_ADDRESS=""
NEXT_PUBLIC_SEASON_PASS_ADDRESS=""

# ─── Clanker Token Info (for /token page) ────────────────────────────
# Set this after deploying via Clanker for the "View on Clanker" link
NEXT_PUBLIC_CLANKER_TOKEN_URL=""

# ─── App URL (for social sharing) ───────────────────────────────────
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ─── Event Indexer ───────────────────────────────────────────────────
# API key for the indexer endpoint (generate a random string)
INDEXER_API_KEY="your-indexer-api-key"

# ─── AI Agent ─────────────────────────────────────────────────────────
# OpenAI API key for GPT-4o (structured output for result extraction)
OPENAI_API_KEY="sk-..."
# Tavily API key for web search ($0.01/search, 1000 free/month)
# Get from: https://tavily.com
TAVILY_API_KEY="tvly-..."
# Secret key for agent API endpoints (generate: openssl rand -hex 32)
AGENT_SECRET_KEY=""
# Vercel Cron secret (auto-set by Vercel, or set manually)
CRON_SECRET=""
