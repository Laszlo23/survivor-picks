# ─── Database ────────────────────────────────────────────────────────
# Production: Use Neon, Supabase, or Vercel Postgres
DATABASE_URL="postgresql://user:password@localhost:5432/survivor_picks?schema=public"

# ─── NextAuth ────────────────────────────────────────────────────────
# Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
# Production: set to your domain (e.g. https://survivorpicks.com)
NEXTAUTH_URL="http://localhost:3000"

# ─── Email Provider (for magic link auth) ────────────────────────────
# Recommended: Resend (resend.com), SendGrid, or Postmark
EMAIL_SERVER_HOST="smtp.resend.com"
EMAIL_SERVER_PORT="465"
EMAIL_SERVER_USER="resend"
EMAIL_SERVER_PASSWORD="re_YOUR_API_KEY"
EMAIL_FROM="noreply@survivorpicks.com"

# ─── Admin ───────────────────────────────────────────────────────────
ADMIN_EMAIL="admin@survivorpicks.com"

# ─── Web3 / Base Chain ──────────────────────────────────────────────
# Chain: "local" (hardhat), "testnet" (Base Sepolia), "mainnet" (Base)
NEXT_PUBLIC_CHAIN="local"

# RPC endpoints (use Alchemy/QuickNode for reliability in production)
NEXT_PUBLIC_BASE_RPC="https://mainnet.base.org"
NEXT_PUBLIC_BASE_SEPOLIA_RPC="https://sepolia.base.org"

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
# Required for wallet connection in production
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=""

# ─── Contract Addresses (set after deployment) ──────────────────────
# Deploy via Clanker: cd contracts && npm run deploy:clanker:token
# Then utility contracts: PICKS_TOKEN_ADDRESS=0x... npm run deploy:clanker:mainnet
# Then copy addresses from contracts/deployments/<network>-clanker.env
NEXT_PUBLIC_PICKS_TOKEN_ADDRESS=""
NEXT_PUBLIC_TREASURY_ADDRESS=""
NEXT_PUBLIC_PREDICTION_ENGINE_ADDRESS=""
NEXT_PUBLIC_STAKING_VAULT_ADDRESS=""
NEXT_PUBLIC_BADGE_NFT_ADDRESS=""
NEXT_PUBLIC_SEASON_PASS_ADDRESS=""

# ─── Clanker Token Info (for /token page) ────────────────────────────
# Set this after deploying via Clanker for the "View on Clanker" link
NEXT_PUBLIC_CLANKER_TOKEN_URL=""

# ─── App URL (for social sharing) ───────────────────────────────────
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ─── Event Indexer ───────────────────────────────────────────────────
# API key for the indexer endpoint (generate a random string)
INDEXER_API_KEY="your-indexer-api-key"
